# KaliDocker Environment Configuration
# Copy this file to .env and customize as needed

# PostgreSQL Configuration
POSTGRES_USER=kali
POSTGRES_PASSWORD=kali_secure_password
POSTGRES_DB=kalidocker

# Next.js UI Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
UI_PORT=3443

# FastAPI Configuration
API_PORT=8000
DATABASE_URL=postgresql://kali:kali_secure_password@postgres:5432/kalidocker
SECRET_KEY=change-this-to-a-secure-random-string

# VNC Configuration (for kali-vnc if needed)
VNC_PASSWORD=kali

# Timezone
TZ=America/Chicago

# HTTP/HTTPS Proxy Configuration
# Set these to route tool traffic through a proxy (Burp, ZAP, etc.)
# Leave empty to disable proxy
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,postgres,api

# Volume Paths (relative to project root)
KALI_DATA_PATH=./data/kali
POSTGRES_DATA_PATH=./data/postgres
